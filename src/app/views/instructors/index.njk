{% extends 'layout.njk' %}

{% block content %}

<div class="card table-container">
    <a href="/instructors/create">New Instructor</a>
    <table width='100%'>
        <thead>
            <tr>
                <th>Instructor</th>
                <th>Areas</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for instructor in instructors %}
            <tr>
                <td>
                    <span style="background-image: url({{instructor.avatar_url}}"></span>
                    {{instructor.name}}</td>
                <td>
                <span class="service">{{instructor.services}}</span>
                </td>
                <td><a href="instructors/{{instructor.id}}">Show</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

</div>

{% endblock content %}