{% extends 'layout.njk' %}

{% block content %}

<div class="card table-container">

    <div class="header">
        
        <a class="button" href="/instructors/create">New</a>
        <form action="/instructors" method="GET">
            <input
                type="text"
                name="filter"
                placeholder = "Name or Service"
                value={{filter}}
            >
            <button type="submit">Filter</button>
        </form>

    </div>

    <table width='100%'>
        <thead>
            <tr>
                <th>Instructor</th>
                <th>Areas</th>
                <th>Students</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for instructor in instructors %}
            <tr>
                <td>
                    <span style="background-image: url({{instructor.avatar_url}}"></span>
                    {{instructor.name}}</td>
                <td><span class="service">{{instructor.services}}</span></td>
                <td>{{instructor.total_students}}</span></td>
                <td><a href="instructors/{{instructor.id}}">Show</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

</div>

{% endblock content %}