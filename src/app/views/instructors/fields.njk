<div class="item">
    <div>Avatar URL</div>
    <div>
        <input
            type="url"
            name="avatar_url"
            placeholder="http://"
            value="{{ instructor.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Name</div>
    <div>
        <input
            type="text" 
            name="name"
            placeholder="Nome do Instrutor"
            value="{{ instructor.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Birthdate</div>
    <div>
        <input
            type="date"
            name="birth"
            value="{{ instructor.birth }}"
        >
    </div>
</div>

<div class="item">
    <div>Sex</div>
    <div>
        <span>
            <input
                type="radio"
                name="gender" value="M"
                {% if instructor.gender =="M" %}
                checked
                {% endif %}
                >Male
        </span>
        <span> 
            <input
                type="radio"
                name="gender"
                value="F"
                {% if instructor.gender =="F" %}
                checked
                {% endif %}
                >Female
        </span>
    </div>
</div>

<div class="item">
    <div>Areas</div>
    <div>
        <input
            type="text"
            name="services"
            placeholder="Split with a comma (something, something)"
            value="{{ instructor.services }}"
        >
    </div>
</div>

<button type="submit">Save</button>